@model IEnumerable<eLibraryUI.Models.Authors>

@{
    ViewData["PageTitle"] = "Author's List";
    ViewData["PageActionText"] = "+ New Author";
    ViewData["PageActionUrl"] = "/Author/AddOrEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-7 widget p-5">
        <table class="table table-borderless mt-2" style="color:#fff;">
    <thead>
        <tr class="border-bottom">
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Nationality
            </th>
            <th class="text-center"> Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td class="d-flex" width="100px">
                    @Html.ActionLink("Edit", "AddOrEdit", new {  id=item.AuthorID }, new { @class = "btn btn-outline-info btn-sm mx-1 px-4" }) |
                    <form action="/Author/Delete/@item.AuthorID" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm mx-1 px-3"
                        onclick="return confirm(&quot;Are you sure to delete this record&quot;)">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
 </div>
    <div class="col md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>
